{
  "name": "salus-backend",
  "version": "1.0.0",
  "description": "Backend per l'app Salus di monitoraggio salute",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd salus-frontend && npm install && npm run build",
    "install-client": "cd salus-frontend && npm install",
    "build-client": "cd salus-frontend && npm run build",
    "heroku-postbuild": "npm run install-client && npm run build-client",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "openai": "^3.2.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
