# Configurazione di base
PORT=3001
NODE_ENV=development

# MongoDB Connection String (produzione)
MONGODB_URI=mongodb://127.0.0.1:27017/salus

# JWT Config
JWT_SECRET=salus_super_secret_jwt_key_for_authentication
JWT_EXPIRE=7d

# Email 
EMAIL_USER=noreply@salus.com
EMAIL_PASS=your_email_password
EMAIL_HOST=smtp.youremailservice.com
EMAIL_PORT=587

# Configurazione frontend
CLIENT_URL=http://localhost:3000

# API Key OpenAI - inserisci la tua chiave qui
OPENAI_API_KEY=sk-example_key_replace_with_your_real_key

# URL API
REACT_APP_API_URL=https://salus-backend.onrender.com

# Configurazione CORS (separati da virgole)
CORS_ORIGIN=http://localhost:3000,https://salus-frontend.vercel.app,https://salus-app.vercel.app,https://www.wearesalusapp.com,https://wearesalusapp.com,https://salus-app-lk16.vercel.app,https://salus-frontend-fork.vercel.app
CORS_ALLOW_ALL=true  # Imposta a 'true' per consentire tutte le origini  