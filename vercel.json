{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "salus-frontend/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|svg|json))", "dest": "/salus-frontend/build/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/salus-frontend/build/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 